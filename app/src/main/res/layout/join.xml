<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/BackBtn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="돌아가기"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="회원가입"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="이름"
        android:textSize="20dp"
        android:textColor="#BD708B"/>
    <EditText
        android:id="@+id/JoinNameEt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="이름"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="아이디"
        android:textSize="20dp"
        android:textColor="#BD708B"/>
    <EditText
        android:id="@+id/JoinIdEt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="아이디"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="생년월일"
        android:textSize="20dp"
        android:textColor="#BD708B"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/YearEt"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:hint="년(4자)"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/MonthEt"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:hint="월"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/DayEt"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:hint="일"
            android:textSize="20dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="비밀번호"
        android:textSize="20dp"
        android:textColor="#BD708B"/>
    <EditText
        android:id="@+id/JoinPassEt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="비밀번호"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="비밀번호 확인"
        android:textSize="20dp"
        android:textColor="#BD708B"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/JoinPass2Et"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="비밀번호 확인"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/PassOkBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="확인"
            android:textSize="20dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="이메일"
        android:textSize="20dp"
        android:textColor="#BD708B"/>
    <EditText
        android:id="@+id/JoinEmailEt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="이메일"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/JoinEt"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="회원가입"
        android:textSize="20dp"
        android:layout_marginLeft="80dp"/>
</LinearLayout>